<Window x:Class="Interest_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interest_Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Loan" HorizontalAlignment="Center" Height="60" Margin="0,116,0,0" VerticalAlignment="Top" Width="198" Click="Button_Click_loan"/>
        <Label Content="Interest Calculator" HorizontalAlignment="Center" Height="74" Margin="0,10,0,0" VerticalAlignment="Top" Width="394" FontSize="48"/>
        <Button Content="Investment" HorizontalAlignment="Center" Height="60" Margin="0,200,0,0" VerticalAlignment="Top" Width="198" Click="Button_Click_Invest"/>
        <Button Content="Exit Program" HorizontalAlignment="Center" Height="60" Margin="0,286,0,0" VerticalAlignment="Top" Width="198" Click="Button_Click_exit"/>
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
