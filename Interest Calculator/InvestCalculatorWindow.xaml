<Window x:Class="Interest_Calculator.InvestCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="เครื่องคำนวณเงินออม/ลงทุน" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="คำนวณผลตอบแทนการลงทุน" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="เงินลงทุนเริ่มต้น:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <TextBox   Grid.Row="0" Grid.Column="1" x:Name="PrincipalTextBox" VerticalAlignment="Center" Margin="0,5"/>
            <TextBlock Grid.Row="0" Grid.Column="2" Text="บาท" VerticalAlignment="Center" Margin="5,5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="เงินลงทุนเพิ่มต่อเดือน:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <TextBox   Grid.Row="1" Grid.Column="1" x:Name="MonthlyContributionTextBox" VerticalAlignment="Center" Margin="0,5"/>
            <TextBlock Grid.Row="1" Grid.Column="2" Text="บาท" VerticalAlignment="Center" Margin="5,5"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="อัตราผลตอบแทน:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <TextBox   Grid.Row="2" Grid.Column="1" x:Name="AnnualRateTextBox" VerticalAlignment="Center" Margin="0,5"/>
            <TextBlock Grid.Row="2" Grid.Column="2" Text="% ต่อปี" VerticalAlignment="Center" Margin="5,5"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="ระยะเวลาลงทุน:" VerticalAlignment="Center" Margin="0,5,10,5"/>
            <TextBox   Grid.Row="3" Grid.Column="1" x:Name="YearsTextBox" VerticalAlignment="Center" Margin="0,5"/>
            <TextBlock Grid.Row="3" Grid.Column="2" Text="ปี" VerticalAlignment="Center" Margin="5,5"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
            <Button Content="ย้อนกลับ" Width="100" Margin="0,0,10,0" Click="Button_Click_back"/>

            <Button Content="คำนวณ" Width="120" FontWeight="Bold" IsDefault="True" Click="CalculateButton_Click"/>
        </StackPanel>

        <TextBlock Grid.Row="3" x:Name="ErrorTextBlock" Foreground="Red" VerticalAlignment="Bottom" Margin="0,10,0,0"/>

    </Grid>
</Window>