<Window x:Class="Interest_Calculator.LoanResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ผลการคำนวณสินเชื่อ" Height="600" Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="สรุปผลการคำนวณ" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="MonthlyPaymentTextBlock" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock x:Name="TotalPaymentTextBlock" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock x:Name="TotalInterestTextBlock" FontSize="16" Margin="0,5,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="AmortizationDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="งวดที่" Binding="{Binding MonthNumber}" Width="Auto"/>

                <DataGridTextColumn Header="ชำระดอกเบี้ย" Binding="{Binding InterestPaid, StringFormat=N2}" Width="*"/>
                <DataGridTextColumn Header="ชำระเงินต้น" Binding="{Binding PrincipalPaid, StringFormat=N2}" Width="*"/>
                <DataGridTextColumn Header="เงินต้นคงเหลือ" Binding="{Binding RemainingBalance, StringFormat=N2}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>